<table>
  <thead>
  <tr>
    <th><%= sortable "created_at", "created_at" %></th>
    <th><%= sortable "deadline", "deadline" %></th>
    <th><%= sortable "priority", "priority" %></th>
  </tr>
  </thead>
</table>
<table>
  <tr>
    <th>State</th>
    <th>Priority</th>
    <th>Limit</th>
    <th>Task</th>
  </tr>
  <% @tasks.each do |task| %>
    <% if task.user_id == current_user.id %>
      <tr>
        <td><%= status(task.current_state) %>/<%= task.current_state %></td>
        <td><%= priority_state(task.priority) %></td>
        <td><%= task.deadline %></td>
        <td><%= link_to(task.name ,"/task/show/#{task.id}") %> / <%= link_to("æ¬¡","/task/next/#{task.id}") %></td>
      </tr>
    <% end %>
  <% end %>
  <%= paginate @tasks %>
</table>
