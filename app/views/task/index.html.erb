<div class="main">
  <%= render ("new") %>

  <% if logged_in? %>

    <h1>タスク一覧</h1>
    <table>
      <thead>
      <tr>
        <th><%= sortable "created_at", "created_at" %></th>
        <th><%= sortable "deadline", "deadline" %></th>
      </tr>
      </thead>
    </table>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to(task.name ,"/task/show/#{task.id}") %> / <%= link_to("次","/task/next/#{task.id}") %>
      </li>
      <p>user_id:<%= task.user_id %></p>
      <p>created_at:<%= task.created_at %></p>
      <p>終了日時:<%= task.deadline %></p>
    <% end %>

  <% end %>
</div>
